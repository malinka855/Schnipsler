<div class="page-header">
  <h1>Schnipsler
    <small> Code einfach teilen</small>
  </h1>
</div>

<table class="table table-striped table-hover table-responsive">
  <thead>
  <tr>
    <th>Benutzer</th>
    <th>Titel</th>
    <th>Code</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @schnipsels.each do |schnipsel| %>
      <tr>
        <td><%= schnipsel.user.username %></td>
        <td><%= schnipsel.titel %></td>
        <td><%= schnipsel.code %></td>
        <td><%= link_to 'Show', schnipsel, {class: 'btn btn-default', role: 'button'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>