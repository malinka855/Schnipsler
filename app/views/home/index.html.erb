<div class="row">
  <div class="col-md-10">

    <%= render 'schnipsels/liste' %>
  </div>
  <div class="col-md-2">
    <h3>Tags</h3>
    <% tag_cloud(@tags, %w(tag1 tag2 tag3 tag4)) do |tag, css_class| %>
        <%= link_to tag.name, {:action => :search, :tag_list => tag.name}, :class => css_class %>
    <% end %>
  </div>
</div>